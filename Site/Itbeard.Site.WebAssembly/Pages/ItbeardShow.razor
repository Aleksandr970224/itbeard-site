            <a href="https://www.youtube.com/playlist?list=PLdmSK1Qzu987VRKxIuCQLevB_vUA2dB2I" target="_blank" class="btn-bottom">
                @((MarkupString)Loc[ItbeardShowLoc.Profession_Paragraph_1_Button].Value)
            </a>
        </section>
    </section>

    <section id="streams" class="presentation">
