            <h1>@Loc[ItbeardShowLoc.Programming]</h1>
            <p>
                @((MarkupString)Loc[ItbeardShowLoc.Programming_Paragraph_1].Value)
            </p>
            <a href="https://www.youtube.com/playlist?list=PLdmSK1Qzu984Jnm_YhDcD_Hs5WEB39HoR" target="_blank" class="btn-bottom">
                @((MarkupString)Loc[ItbeardShowLoc.Programming_Paragraph_1_Button].Value)
            </a>
        </section>
    </section>

    <section id="commerce" class="presentation no-bg">
            <section class="content left">
                <h1>
                    @Loc[ItbeardShowLoc.Commercial_Title]
                </h1>
                <p>
                    @Loc[ItbeardShowLoc.Commercial_Paragraph1_Part1]
                    (<a href="https://s.itbeard.com/mediakit" target="_blank" class="email">русский</a>,
                    <a href="https://s.itbeard.com/mediakit-en" target="_blank" class="email">english</a>).
                </p>
                <p>
                    @Loc[ItbeardShowLoc.Commercial_Paragraph2_Part1]
                    <a href="mailto:iamitbeard@gmail.com" target="_blank" class="email">iamitbeard@gmail.com</a>
                    @Loc[ItbeardShowLoc.Commercial_Paragraph2_Part2]
                    <a href="https://t.me/iamitboroda" target="_blank" class="email">@@iamitboroda</a>.
                </p>
            </section>
        </section>

    <section id="not_commerce" class="presentation no-bg">
        <section class="content right">
            <h1>
                @Loc[ItbeardShowLoc.NonCommercial_Title]
            </h1>
            <p>
                @Loc[ItbeardShowLoc.NonCommercial_Title]
