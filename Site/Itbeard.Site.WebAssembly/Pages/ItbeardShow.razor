@page "/show"
@page "/partnership"
@using ItbeardShowLoc = Localizations.Pages.ItbeardShow;
@using SharedRes = Localizations.SharedLocalizations;
@inject IStringLocalizer<SharedRes> SharedLoc
@inject IStringLocalizer<ItbeardShowLoc> Loc

<Title>@Loc[ItbeardShowLoc.PageTitle] @SharedLoc[SharedRes.PageTitleAddition]</Title>
<main id="landing">
    <section id="about" class="presentation presentation-first no-bg">
        <section class="content right">
            <h1>@Loc[ItbeardShowLoc.AboutShow]</h1>
            <p>
                @((MarkupString)Loc[ItbeardShowLoc.AboutShow_Paragraph_2].Value)
            </p>
            <p>
                @((MarkupString)Loc[ItbeardShowLoc.AboutShow_Paragraph_3].Value)
                <b class="parting-words">
                    @Loc[ItbeardShowLoc.AboutShow_Paragraph_3_End]
                </b>
            </p>
        </section>
    </section>

    <section id="interview" class="presentation">
        <section class="content center">
            <h1>@Loc[ItbeardShowLoc.Interview]</h1>
            <p>
                @((MarkupString)Loc[ItbeardShowLoc.Interview_Paragraph_1].Value)
            </p>
            <a href="https://www.youtube.com/playlist?list=PLdmSK1Qzu986l19y0i0dMoPSQxb2wnsdE" target="_blank" class="btn-bottom">
                @((MarkupString)Loc[ItbeardShowLoc.Interview_Paragraph_1_Button].Value)
            </a>
        </section>
    </section>

    <section id="know" class="presentation">
        <section class="content left">
            <h1>@Loc[ItbeardShowLoc.Profession]</h1>
            <p>
                @((MarkupString)Loc[ItbeardShowLoc.Profession_Paragraph_1].Value)
