@page "/contacts"
@using ContactsRes = Localizations.Pages.Contacts;
@using SharedRes = Localizations.SharedLocalizations;
@inject IStringLocalizer<ContactsRes> Loc
@inject IStringLocalizer<SharedRes> SharedLoc

<Title>@Loc[ContactsRes.PageTitle] @SharedLoc[SharedRes.PageTitleAddition]</Title>

<main class="wide-container">
    <section id="resources" class="presentation presentation-first no-bg">
        <section class="content right">
            <h1>
                @Loc[ContactsRes.KeyResources]
            </h1>
            <p class="links youtube">
                <span>@Loc[ContactsRes.KeyResources_Itbeard]</span> / <a href="https://youtube.com/@@itbeard" target="_blank">youtube.com/@@itbeard</a>
            </p>
            <p class="links youtube">
                <span>@Loc[ContactsRes.KeyResources_CiomnyLos]</span> / <a href="https://www.youtube.com/@@ciomnylos" target="_blank">youtube.com/@@ciomnylos</a>
            </p>
            <p class="links mastodon">
                <span>@Loc[ContactsRes.KeyResources_Mastodon]</span> / <a href="https://vkl.world" target="_blank">vkl.world</a>
            </p>
            <p class="links telegram">
                <span>@Loc[ContactsRes.KeyResources_Telegram]</span> / <a href="https://t.me/itbeard" target="_blank">t.me/itbeard</a>
            </p>
            <p class="links linkedin">
                <span>@Loc[ContactsRes.KeyResources_Linkedin]</span> / <a href="https://s.itbeard.com/linkedin" target="_blank">s.itbeard.com/linkedin</a>
            </p>
            <p class="links patreon">
                <span>@Loc[ContactsRes.KeyResources_Patreon]</span> / <a href="https://www.patreon.com/itbeard" target="_blank">patreon.com/itbeard</a>
            </p>
        </section>
    </section>

    <section id="contacts" class="presentation presentation-first no-bg">
        <section class="content left">
            <h1>@Loc[ContactsRes.Cont_Title]</h1>
            <div class="links">
                <span>@Loc[ContactsRes.Cont_Email]</span>
                <div>
                    <a href="mailto:iamitbeard@gmail.com" target="_blank">iamitbeard@gmail.com</a>
                </div>
            </div>
            <div class="links">
                <span>@Loc[ContactsRes.Cont_Telegram]</span>
                <div>
                    <a href="https://t.me/iamitbeard" target="_blank">@@iamitbeard</a>
                </div>
            </div>
            <div class="links">
                <span>@Loc[ContactsRes.Cont_Mail]</span>
                <div>
                    <div>
                        @Loc[ContactsRes.Cont_Mail_body]
                    </div>
                </div>
            </div>
        </section>
    </section>

    <section id="socials" class="presentation presentation-first no-bg">
        <section class="content right">
            <h1>@Loc[ContactsRes.Other]</h1>
            <p class="links twitter">
                <span>@Loc[ContactsRes.Other_Twitter]</span> / <a href="https://twitter.com/iamitbeard" target="_blank">twitter.com/iamitbeard</a>
            </p>
            <p class="links">
                <span>@Loc[ContactsRes.Other_GitHub]</span> / <a href="https://github.com/itbeard" target="_blank">github.com/itbeard</a>
            </p>
            <p class="links linkedin">
                <span>@Loc[ContactsRes.Other_LinkedIn]</span> / <a href="https://www.linkedin.com/in/akartynnik" target="_blank">linkedin.com/in/akartynnik</a>
            </p>
            <p class="links mastodon">
                <span>@Loc[ContactsRes.Other_Mastodon]</span> / <a href="https://vkl.world/@@itbeard" target="_blank">@@itbeard@@vkl.world </a>
            </p>
        </section>
    </section>
</main>
