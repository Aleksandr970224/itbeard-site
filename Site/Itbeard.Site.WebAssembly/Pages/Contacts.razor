@page "/contacts"
@using ContactsRes = Localizations.Pages.Contacts;
@using SharedRes = Localizations.SharedLocalizations;
@inject IStringLocalizer<ContactsRes> ContactsLoc
@inject IStringLocalizer<SharedRes> SharedLoc

<Title>@ContactsLoc[ContactsRes.PageTitle] @SharedLoc[SharedRes.PageTitleAddition]</Title>

<main id="contacts">
    <section id="first_slide" class="presentation presentation-first no-bg">
        <section class="content right">
            <h1>@ContactsLoc[ContactsRes.KeyResources]</h1>
            <p class="links youtube">
                <span>@ContactsLoc[ContactsRes.KeyResources_YouTube]</span> / <a href="https://youtube.com/itbeard" target="_blank">youtube.com/itbeard</a>
            </p>
            <p class="links mave">
                <span>@ContactsLoc[ContactsRes.KeyResources_Podcasts]</span> / <a href="https://itbeard.mave.digital" target="_blank">itbeard.mave.digital</a>
            </p>
            <p class="links patreon">
                <span>@ContactsLoc[ContactsRes.KeyResources_Patreon]</span> / <a href="https://www.patreon.com/itbeard" target="_blank">patreon.com/itbeard</a>
            </p>
            <p class="links instagram">
                <span>@ContactsLoc[ContactsRes.KeyResources_Instagram]</span> / <a href="https://instagram.com/itbeard" target="_blank">instagram.com/itbeard</a>
            </p>
            <p class="links telegram">
                <span>@ContactsLoc[ContactsRes.KeyResources_Telegram]</span> / <a href="https://t.me/itbeard" target="_blank">t.me/itbeard</a>
            </p>
            <p class="links twitter">
                <span>@ContactsLoc[ContactsRes.KeyResources_Twitter]</span> / <a href="https://twitter.com/iamitbeard" target="_blank">twitter.com/iamitbeard</a>
            </p>
            <p class="links discord">
                <span>@ContactsLoc[ContactsRes.KeyResources_Discord]</span> / <a href="https://s.itbeard.com/sponsors-discord" target="_blank">s.itbeard.com/sponsors-discord</a>
            </p>
        </section>
    </section>

    <section id="second_slide" class="presentation presentation-first no-bg">
        <section class="content left">
            <h1>@ContactsLoc[ContactsRes.Cont_Title]</h1>
            <div class="links">
                <span>@ContactsLoc[ContactsRes.Cont_Email]</span>
                <div>
                    <a href="mailto:iamitbeard@gmail.com" target="_blank">iamitbeard@gmail.com</a>
                </div>
            </div>
            <div class="links">
                <span>@ContactsLoc[ContactsRes.Cont_Telegram]</span>
                <div>
                    <a href="https://t.me/iamitboroda" target="_blank">@@iamitboroda</a>
                </div>
            </div>
            <div class="links">
                <span>@ContactsLoc[ContactsRes.Cont_Mail]</span>
                <div>
                    <div>
                        @ContactsLoc[ContactsRes.Cont_Mail_body]
                    </div>
                </div>
            </div>
        </section>
    </section>

    <section id="third_slide" class="presentation presentation-first no-bg">
        <section class="content right">
            <h1>@ContactsLoc[ContactsRes.Other]</h1>
            <p class="links youtube">
                <span>@ContactsLoc[ContactsRes.Other_YouTubeWall]</span> / <a href="https://youtube.com/itbeard/community" target="_blank">youtube.com/itbeard/community</a>
            </p>
            <p class="links">
                <span>@ContactsLoc[ContactsRes.Other_GitHub]</span> / <a href="https://github.com/it-beard" target="_blank">github.com/it-beard</a>
            </p>
            <p class="links telegram">
                <span>@ContactsLoc[ContactsRes.Other_TelegramStickers]</span> / <a href="https://s.itbeard.com/tgstickers" target="_blank">s.itbeard.com/tgstickers</a>
            </p>
            <p class="links linkedin">
                <span>@ContactsLoc[ContactsRes.Other_LinkedinGroup]</span> / <a href="https://s.itbeard.com/linkedin" target="_blank">s.itbeard.com/linkedin</a>
            </p>
            <p class="links facebook">
                <span>@ContactsLoc[ContactsRes.Other_FacebookGroup]</span> / <a href="https://www.facebook.com/itbeard" target="_blank">facebook.com/itbeard</a>
            </p>
        </section>
    </section>
</main>
