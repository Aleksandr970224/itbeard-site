@inject NavigationManager NavigationManager

<NavLink class="logo" href="">
    <img src="/images/logo.jpg" alt="">
    АйТиБорода
</NavLink>

<button id="menu-toggle" class="menu-toggle @NavMenuButtonCssClass" @onclick="ToggleNavMenu">
    <span></span><span></span><span></span>
</button>

<nav id="menu" class="@NavMenuCssClass">
    <a class="logo" href="/partnership" @onclick='() => NavigateToRoute("/partnership")'>Сотрудничество</a>
    <a class="logo" href="/sponsorship" @onclick='() => NavigateToRoute("/sponsorship")'>Спонсорство</a>
    <a class="logo" href="/contacts" @onclick='() => NavigateToRoute("/contacts")'>Контакты</a>
</nav>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuButtonCssClass => collapseNavMenu ? null: "active";
    private string NavMenuCssClass => collapseNavMenu ? null: "opened";

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
    
    private void NavigateToRoute(string route)
    {
        collapseNavMenu = true;
        NavigationManager.NavigateTo(route);
    }
}
